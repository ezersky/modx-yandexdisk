[<%= node.app.name %>]
listen = /var/run/site-<%= node.app.name %>.sock
listen.mode = 0666
user = <%= user.name %>
group = <%= user.name %>
chdir = <%= node.app.rootpath %>
php_admin_value[upload_tmp_dir] = <%= node.app.rootpath %>/tmp
php_admin_value[date.timezone] = Europe/Minsk
php_admin_value[memory_limit] = 100M

pm = dynamic
pm.max_children = 10
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 4
