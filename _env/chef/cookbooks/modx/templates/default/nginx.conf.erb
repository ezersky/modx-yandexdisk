upstream proxy-<%= node.app.name %> {
	server unix:/var/run/site-<%= node.app.hostname %>.sock;
}

server {
	listen		80;
	server_name	<%= node.app.domain %>;
	root		<%= node.app.rootpath %>;
	access_log	/var/log/nginx/<%= node.app.name %>-access.log;
	error_log	/var/log/nginx/<%= node.app.name %>-error.log;
	index		index.php index.html;
	rewrite_log	on;

	location /core/ {
		deny all;
	}

	location / {
		try_files	$uri $uri/ @rewrite;
	}

	location @rewrite {
		rewrite		^/(.*)$ /index.php?q=$1;
	}

	location ~\.php$ {
		include fastcgi_params;
		fastcgi_param	SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_pass	proxy-<%= node.app.name %>;
	}

	location ~* ^.+\.(jpg|jpeg|gif|css|png|js|ico|bmp)$ {
		access_log       off;
   		expires          10d;
   		break;
	}
	location ~ /\.ht {
		deny all;
	}
}
